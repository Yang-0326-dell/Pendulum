INT cigma( vector<int> s,int x0,int y0,int x, int y,int t,int pro,int re) {
    bool state1=0;
    int times=0;
    int tmp1 = 1;
    int pow = x;
    int result;
    for (int i = x; i <= y; i++) {
        cout << 0<<endl;
        if (t!=0) {//ËøòÊú™Ë∑≥Âà∞ÊúÄÂêé‰∏Ä‰∏™ÂÖÉÁ¥†
            if (y-x<t) {
                cout << 11 << endl;
                pro *= s[i];
                result=cigma(s, x0 + 1, y0, x0 + 2, y, t - 1,pro,re);
                //return re;
                //break;
            }
            else {
                cout << 12 << endl;
                pro *= s[i];
                result=cigma(s, x0, y0, x + 1, y, t - 1,pro,re);
            }
        }
        else {//Â∑≤Ë∑≥Âà∞ÊúÄÂêé‰∏Ä‰∏™ÂÖÉÁ¥†
            if (i < y) {//ÊúÄÂêé‰∏Ä‰∏™ÂÖÉÁ¥†Êú™ËææÂà∞‰∏äÈôê
                cout << 21 << endl;
                result=cigma(s, x0, y0, x + 1, y, t, pro, re += pro * s[i]);
              /*  return re += pro * s[i];
                break;*/
            }
            else {//ÊúÄÂêé‰∏Ä‰∏™ÂÖÉÁ¥†Â∑≤ËææÂà∞‰∏äÈôê
                cout << 22<<endl;
                //result=cigma(s, x0, y0, x + 1, y, t+1, pro, re += pro * s[i]);
                return re+=pro*s[i];
                break;
            }
        }
        cout << "00"<<endl;
}
}

INT cigma1(vector<int> s, int result, int pro, int x, int y, int t) {
    int res;
    for (int i = x; i <= y-t; i++) {
     
        //cout << s[i]<<" ";
        if (t==0&&s[i]!=0) {
            result += pro * s[i];
            /*cout << "1" << endl;*/
        }
        else if (t < 0) {
            break;
        }
        else if(t>0){
            if (s[i] == 0) s[i] = 0;
            int tmp=cigma1(s, 0, pro * s[i], i+1, y, t - 1);
            result += tmp;
        }
    }
    //cout << endl;
    return result;
}

